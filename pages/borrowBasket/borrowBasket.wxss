page {
    background: #f4f4f4;
}

.prompt-container {
    background: #f4f4f4;
}

.weui-navbar__item {
    padding: 9px 0;
}

.weui-navbar__slider {
    width: 4.1em;
}
@import "../../assets/styles/weui.wxss";

.container {
    box-sizing: border-box;
    padding: 0 0 0 0;
}

.record {
    display: flex;
    flex-direction: row;
    align-items: center;
    /* width: 100%; */
    /* height: 120rpx; */
    position: absolute;
    justify-content: space-between;
    background-color: #fafafa;
}

.record .right {
    margin-right: 10rpx;
    color: #888;
    height: 300rpx;
}

.record .left {
    margin-left: 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.record .left .summary {
    color: #aaa;
    font-size: 30rpx;
    line-height: 30rpx;
}

.record-box {
    /* height: 120rpx; */
    width: 100%;
    border-bottom: 1rpx solid #ddd;
    background-color: #fff;
}

.delete-box {
    background-color: #e64340;
    color: #fff;
    float: right;
    width: 80px;
    height: 300rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.record-box:last-child {
    border-bottom: 0;
}

.record .r-item {
}

.owner-info {
    font-size: 28rpx;
}

.noOver {
    width:100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
