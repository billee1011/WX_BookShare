/**图书列表**/

.book-list {
    /* width: 94%; *//* margin: 4rpx 0 4rpx 0;    
    padding: 4rpx 0; */
    padding: 0 0;
}

.book-tmp {
    padding: 1rpx 48rpx 1rpx 48rpx;
    background: #fff;
    /* margin-bottom: 20rpx; */
    height: 220rpx;
}

.book-image {
    width: 25%;
    height: 220rpx;
    float: left;
}

.book-info {
    width: 73%;
    float: right;
    height: 100%;
    text-align: center;
    /* padding-left: 2%; */
}

.book-name {
    height: 50%;
    line-height: 60rpx;
    display: block !important;
    margin-top: 10px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.book-author {
    height: 50%;
    line-height: 60rpx;
    display: block !important;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 14px;
}

.book-applier .left {
    margin-left: 10px;
    float: left;
    width: 80px;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.book-applier .right {
    float: right;
    width: 120px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

