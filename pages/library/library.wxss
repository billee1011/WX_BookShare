view#splitter{position:relative;overflow:hidden;width:500px;background:#fff;color:#f0f0f0;margin:0 auto;font-size:0;}
view#splitter image{position:absolute;transition:1s all ease-in-out;width:100%;}
view#splitter text{position:absolute;width:50%;margin:0 25%;font-size:40rpx;top:40%;text-align:center;font-family:"Open Sans","Helvetica Neue",Helvetica,Arial,STHeiti,"Microsoft Yahei",sans-serifl;border:2px solid #f7f7f7}
view#splitter image:nth-of-type(1){clip:rect(0px,668px,334px,0px)}
view#splitter image:nth-of-type(2){clip:rect(334px,668px,668px,0px)}
view#splitter:hover image:nth-of-type(1){transform:translateY(-334px);}
view#splitter:hover image:nth-of-type(2){transform:translateY(334px);}
view,
view:after,
view:before {
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}
