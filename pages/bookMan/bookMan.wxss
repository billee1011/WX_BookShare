.record-box {
    /* height: 120rpx; */
    width: 100%;
    border-bottom: 1rpx solid #ddd;
    background-color: #fff;
}

.record-box .left {
    float: left;
    height: 240rpx;
}

.record-box .left image {
    width: 240rpx;
    height: 240rpx;
}

.record-box .right {
    float: left;
    font-size: 30rpx;
    line-height: 60rpx;
    height: 240rpx;
    padding-left: 10rpx;
}

.record-box .right .book_name {
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.record-box .right .info {
    color: #888;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.record-box .right .info image {
    width: 15px;
    height: 15px;
}

.operate-box {
    width: 100%;
    margin:0 0;
}

.operate-box .operate {
    float: right;
    height: 80rpx;
    line-height: 80rpx;
}

.operate-box .operate .operate_view {
    display: inline-block;
    margin-right: 15rpx;
    padding-top:11rpx
}

.operate-box .operate .operate_view image {
    width: 16px;
    height: 16px;
}
